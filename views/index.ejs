<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>21 Savage Fans</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="todo.css">
</head>
<body>
    <div class="container">
        <h1>To-Do List</h1>
        <div class="add-element"></div>
        <form action="/messages" method="POST">
        <input type="text" id="add" placeholder="Type something to do" name="msg">
        <button id="btn" type="submit" name="button">Add</button>
        <button id="remove" name="button" type="button">Remove All</button>
    </form>
        <div class="element-list">
            <ul id="list">
                <% for(var i=0; i<messages.length; i++) {%>
                <li class="list">
                    <span><%= messages[i].msg %></span>
                </li>
                <% } %>
            </ul>
        </div>
    </div>  
  <script src="main.js"></script>

</body>
</html>
